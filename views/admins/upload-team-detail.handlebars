<!--
  * Rendering a form (modal) that allows user to upload text.
  * This form will make post request to Admin route to upload
  * text to database
-->

<div class="col-12 col-md-9 col-lg-10 ml-md-auto content"> 
  <h1>{{teamName}} Team</h1>
  <h2>Upload team description</h2>
  <div class="upload-form">
    <form method="post" action="/admin/team/{{teamName}}/upload-team-detail">
        <div class="form-group">
        <label>Description</label>
        <textarea type="text" name="description" class="form-control text-area" placeholder="Description"> </textarea>
      </div>
      <button type="submit" class="btn btn-primary">Upload</button>
    </form>
  </div>
</div>