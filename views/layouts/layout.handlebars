<!DOCTYPE html>
<html>
<head>
  <title>Hyperloop</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <!-- bootstrap -->
  <link rel="stylesheet" type="text/css" href="/css/bootstrap.css">
  <!-- front-awesome -->
  <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <!-- AnimationCss -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css">
  <!-- custom css -->
  <link rel="stylesheet" type="text/css" href="/css/style.css">
</head>
<body>
  <header>
    {{#if isAdmin}}
      {{#if isUpload}}
      <div class="container-fluid">
        <nav>
          <div class="row">
            <div class="col-12 col-md-3 col-lg-2 navigator">
              <ul class="row" id= "nav-admin">
                <li class="col-4 col-md-12 nav-active">
                  <a href="/admin/">DashBoard</a>
                </li>
                <li class="col-4 col-md-12">
                  <a href="/admin/team/{{teamName}}/upload-image">Upload team image</a>
                </li>
                <li class="col-4 col-md-12">
                  <a href="/admin/team/{{teamName}}/upload-team-detail">Upload team description</a>
                </li>
              </ul>
            </div>
        </nav></div>
        {{/if}}
    {{else}}
    <h2>logo</h2>
    <nav id="nav-client" class="nav-client">
      <li class="{{#if home}}nav-client-active{{/if}}">
        <a href="/"><i class="fa fa-home"></i>
        <span>Home</span>
      </a></li>
      <li class="{{#if teams}}nav-client-active{{/if}}">
        <a href="/teams">
          <i class="fa fa-users"></i>
          <span>Teams</span>
        </a>
      </li>
      <li class="{{#if contact}}nav-client-active{{/if}}">
        <a href="/contact">
          <i class="fa fa-phone"></i>
          <span>Contact</span>
        </a>
      </li>
      <li class="{{#if donate}}nav-client-active{{/if}}">
        <a href="#">
          <i class="fa fa-handshake-o"></i>
          <span>Donate</span>
        </a>
      </li>
    </nav>
    {{/if}}
  </header>
  {{!-- Body --}}
  <div class="container-fluid">
    {{{body}}}
  </div>

  {{!-- Footer --}}
  {{#if isAdmin}}
  {{else}}
    <footer>
      <div class="container">
        <div class="row">
          <div class="col-sm-12 col-md-6">
            <div class="slack-icon">
              <a href="https://ucdhyperloopteam.slack.com">
                <img src="../images/slack.png" alt="icon">
                <h5>Chat with us on slack </h5>
              </a></div>
            <hr>
          </div>
          <div class="col-sm-12 col-md-6">
            <h4>Contact us</h4>
            <div class="contact-item">
              <h5>
                <a href="mailto:hyperloop@ucdavis.edu">
                  hyperloop@ucdavis.edu
                </a>
              </h5></div>
            <div class="social-icon">
              <a href="#">
              <img title="Twitter" alt="Twitter" src="https://socialmediawidgets.files.wordpress.com/2014/03/01_twitter.png" width="35" height="35" />
              </a>
              <a href="#">
              <img title="Facebook" alt="Facebook" src="https://socialmediawidgets.files.wordpress.com/2014/03/02_facebook.png" width="35" height="35" />
              </a>
              <a href="#">
              <img title="Instagram" alt="RSS" src="https://socialmediawidgets.files.wordpress.com/2014/03/10_instagram.png" width="35" height="35" />
              </a></div>
          </div>
        </div>
      </div>
    </footer>
  {{/if}}

  {{!-- Javascript --}}
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
  <script src="/js/index.js" type="text/javascript"></script>
</body>
</html>